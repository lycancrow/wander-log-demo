<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado (morado oscuro) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FD8079" /> <!-- Morado oscuro -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Estado normal (morado) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Morado -->
            <corners android:radius="16dp" />
        </shape>
    </item>

</selector>