<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado: color ligeramente mÃ¡s oscuro/transparente -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:width="1.5dp" android:color="#52065F"/>
            <solid android:color="#66FFFFFF"/> <!-- ejemplo: 40% white -->
        </shape>
    </item>

    <!-- Estado por defecto / fallback -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:width="1.5dp" android:color="#52065F"/>
            <solid android:color="@color/white_50" />
        </shape>
    </item>

</selector>
